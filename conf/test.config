/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

   input = 'https://raw.githubusercontent.com/darko-cucin/perturb-seq-nextflow/refs/heads/main/assets/samplesheet.csv'
    fasta_reference_crispr = 'https://raw.githubusercontent.com/darko-cucin/perturb-seq-nextflow/refs/heads/main/assets/test_data/crispr_reference.fa.gz'
    gtf_reference_crispr  = 'https://raw.githubusercontent.com/darko-cucin/perturb-seq-nextflow/refs/heads/main/assets/test_data/crispr_reference.gtf.gz'
    fasta_reference_gex  =  'https://raw.githubusercontent.com/darko-cucin/perturb-seq-nextflow/refs/heads/main/assets/test_data/small_chr.fasta.gz'
    gtf_reference_gex  =  'https://raw.githubusercontent.com/darko-cucin/perturb-seq-nextflow/refs/heads/main/assets/test_data/small_chr.gtf.gz'
    tenx_version         = '10XV3'
    outdir = 'testing'



}
